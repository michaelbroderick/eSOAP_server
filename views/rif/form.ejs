<%- include('../partials/rif/rif_head') %>
    <%- include('../partials/nav_bar') %>

        <div class="container border rounded my-3">


            <h2 class="display-5 text-center my-3">RIF Pain and Appendicitis Module</h2>

            <ul class="nav nav-tabs" id="tabs">
                <li class="nav-item">
                    <a class="nav-link forms-links active" id="rif_risk_strat_link">Risk
                        Stratification</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_bloods_link">Bloods</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_clinical_exam_link">Clinical
                        Examination</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_imaging_link">Imaging</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_procedure_link">Procedure</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_surgery_link">Surgery</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="rif_post_op_link">Post-Operative</a>
                </li>

            </ul>


            <form action="/rif/<%=req.params.id%>/form" method="POST">

                <span id="hiddenspan" hidden="true">
                    <%=jsonData%>
                </span>

                <section id='rif_risk_strat_form'>
                    <%- include('../partials/rif/rif_risk_strat') %>
                </section>
                <section id='rif_bloods_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_bloods') %>
                </section>
                <section id='rif_clinical_exam_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_clinical_exam') %>
                </section>
                <section id='rif_imaging_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_imaging') %>
                </section>
                <section id='rif_procedure_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_procedure') %>
                </section>
                <section id='rif_surgery_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_surgery') %>
                </section>
                <section id='rif_post_op_form' class='input_visibility'>
                    <%- include('../partials/rif/rif_post_op') %>
                </section>

                <button type="button" class="btn btn-primary btn-lg my-3 mx-1 next" id="nxt">Next</button>
                <button type="button" class="btn btn-primary btn-lg my-3 mx-1 previous input_visibility"
                    id="prev">Previous</button>
                <button class="btn btn-primary btn-lg my-3 mx-1 view_modules" id="view_mod">View Modules</button>
                <input type="number" id="percentComplete" name="percentComplete" hidden=true>
            </form>

        </div>


        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"></script>
        <script src="/js/form_functions.js"></script>

        <script>
            populateLocalStorage();
            populate("input, select");
            setListener("input, select");
            addDateCheck();
            setNavListener(['rif_risk_strat', 'rif_bloods', 'rif_clinical_exam', 'rif_imaging', 'rif_procedure', 'rif_surgery', 'rif_post_op']);
            setNextListener(['rif_risk_strat', 'rif_bloods', 'rif_clinical_exam', 'rif_imaging', 'rif_procedure', 'rif_surgery', 'rif_post_op'])
            setPrevListener(['rif_risk_strat', 'rif_bloods', 'rif_clinical_exam', 'rif_imaging', 'rif_procedure', 'rif_surgery', 'rif_post_op'])

        </script>

        <% if(validate==='pass' ){ %>
            <script src='/js/validation.js'></script>
            <% } %>

                </body>

                </html>