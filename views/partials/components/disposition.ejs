            <input class="form-check-input" type="radio" name="antibioticsrecordedid" id="antibioticsRadio2" value="No">
            <label class="form-check-label" for="antibioticsRadio2">No</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="antibioticsrecordedid" id="antibioticsRadio3" value="ND">
            <label class="form-check-label" for="antibioticsRadio3">ND</label>
        </div>
    </div>
    <div class="col-sm-4" id="antibioFullDiv">
        <div class="form-group input_visibility" id="antibioTimeDiv">
            <label for="antibioticsrecordedtime">Antibiotics Time</label>
            <input type="datetime-local" name="antibioticsrecordedtime" class="form-control"
                id="antibioticsrecordedtime">
        </div>
        <p class="h5 input_visibility" id="antibioTimeh5">Antibiotics Time</p>
        <div class="form-check">
            <label class="form-check-label" for="antibioticsrecordedtimend">Date Not Documented</label>
            <input type="checkbox" value="ND" id="antibioticsrecordedtimend" name=antibioticsrecordedtimend>
        </div>
    </div>
</div>

