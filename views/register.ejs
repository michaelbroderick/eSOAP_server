    <link rel="stylesheet" href="/css/styles.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300;1,600&display=swap"
        rel="stylesheet" type="text/css">
    <script src='/js/jquery.js'></script>

</head>

<body>


    <section class="container px-0">

        <header class="logo_space">
            <div><img src="/imgs/hse_logo.png" alt="logo_hse" id="hse"></div>
            <!-- <div><img src="/imgs/living_lab.png" alt="logo_living" id="living_lab"></div> -->
            <div><img src="/imgs/esoap_logo.jpg" alt="logo_esoap" id="esoap"></div>
        </header>

        <!-- <div class="row">
            <div class="col-4"><img src="/imgs/hse_logo.png" alt="logo_hse" id="hse"></div>
            <div class="col-4"><img src="/imgs/living_lab.png" alt="logo_living" id="living_lab"></div>
            <div class="col-4"><img src="/imgs/esoap_logo.jpg" alt="logo_esoap" id="esoap"></div>
        </div> -->

        <div id="login_box">
            <h1>Register</h1>

            <form action="/user/register" method="POST">
                <table>
                    <tr>
                        <td><label for="username">Username:</label></td>
                        <td><input type="text" name="username" id="username" required></td>
                    </tr>

                    <tr>
                        <td> <label for="email">Email:</label></td>
                        <td> <input type="text" name="email" id="email" required></td>
                    </tr>

                    <tr>
                        <td> <label for="fname">First Name:</label></td>
                        <td><input type="text" name="fname" id="fname" required></td>
                    </tr>

                    <tr>
                        <td> <label for="lname">Last Name:</label></td>
                        <td><input type="text" name="lname" id="lname" required></td>
                    </tr>

                    <tr>
                        <td> <label for="password">Password:</label></td>
                        <td><input type="text" name="password" id="password" required></td>
                    </tr>


                </table>
                <button>Register</button>

            </form>



        </div>
        <footer>
            <div id=greenbox></div>
            <div id=redbox></div>
        </footer>
    </section>

</body>

</html>