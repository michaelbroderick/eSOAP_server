<%- include('../partials/lap/lap_head') %>
    <%- include('../partials/nav_bar') %>

        <div class="container border rounded my-3">


            <h2 class="display-5 text-center my-3">Laparotomy Module</h2>

            <ul class="nav nav-tabs" id="tabs">
                <li class="nav-item">
                    <a class="nav-link forms-links active" id="lap_preop_link">Pre-op</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="lap_preop_risk_strat_link">Pre-op Risk Stratification</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="lap_intra_op_link">Intra-op</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="lap_procedure_link">Procedure</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link forms-links" id="lap_post_op_link">Post-op</a>
                </li>
            </ul>

            <form action="/lap/<%=req.params.id%>/form" method="POST">


                <span id="hiddenspan" hidden="true">
                    <%=jsonData%>
                </span>

                <section id='lap_preop_form'>
                    <%- include('../partials/lap/lap_preop') %>
                </section>
                <section id='lap_preop_risk_strat_form' class='input_visibility'>
                    <%- include('../partials/lap/lap_preop_risk_strat') %>
                </section>
                <section id='lap_intra_op_form' class='input_visibility'>
                    <%- include('../partials/lap/lap_intra_op') %>
                </section>
                <section id='lap_procedure_form' class='input_visibility'>
                    <%- include('../partials/lap/lap_procedure') %>
                </section>
                <section id='lap_post_op_form' class='input_visibility'>
                    <%- include('../partials/lap/lap_post_op') %>
                </section>

                <button type="button" class="btn btn-primary btn-lg my-3 mx-1 next" id="nxt">Next</button>
                <button type="button" class="btn btn-primary btn-lg my-3 mx-1 previous input_visibility"
                    id="prev">Previous</button>
                <button class="btn btn-primary btn-lg my-3 mx-1 view_modules" id="view_mod">View Modules</button>
                <input type="number" id="percentComplete" name="percentComplete" hidden=true>


            </form>


        </div>




        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
            crossorigin="anonymous"></script>
        <script src="/js/form_functions.js"></script>

        <script>
            populateLocalStorage();
            populate("input, select");
            setListener("input, select");
            addDateCheck();
            setNavListener(['lap_preop', 'lap_preop_risk_strat', 'lap_intra_op', 'lap_procedure', 'lap_post_op']);
            setNextListener(['lap_preop', 'lap_preop_risk_strat', 'lap_intra_op', 'lap_procedure', 'lap_post_op']);
            setPrevListener(['lap_preop', 'lap_preop_risk_strat', 'lap_intra_op', 'lap_procedure', 'lap_post_op']);
        </script>
        <script src="/js/lap.js"></script>

        <% if(validate==='pass' ){ %>
            <script src='/js/validation.js'></script>
            <% } %>

                </body>

                </html>